glowoff:/glow off = >>>
    if(import(player()."glowEffects") == "true"){
        tmsg(player(), color(red)."Your glow is currently locked")
        die()
    }
    sudo(/effect player() 24 0)
<<<
glowon:/glow on = >>>
    if(import(player()."glowEffects") == "true"){
        tmsg(player(), color(red)."Your glow is currently locked")
        die()
    }
    sudo(/effect player() 24 0)
    sudo(/effect player() 24 9999 1 true)
<<<

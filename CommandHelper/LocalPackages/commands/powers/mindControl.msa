    @pgroup = pgroup()[0]
    
    runas(~console,'/icu stop '.@player)
    broadcast("@player has stopped mindcontrolling")
    
    include('/home/minecraft/server/plugins/CommandHelper/LocalPackages/commands/buffs/' . @pgroup . '.ms')
    _changeSkin(player(),@hero['sig'],@hero['val'])


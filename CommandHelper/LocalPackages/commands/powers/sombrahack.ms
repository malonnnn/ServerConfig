register_command(sombrahack, 
    array(
        description: 'Power',
        permission: 'powers.sombrahack',
        noPermMsg: 'Sorry you don\'t have permission to use this command.',
        executor: closure(@alias, @sender, @args) {
        
            if (array_size(@args) != 1) {
                return(false) 
            }
            @plr = player()
            @player = @args[0]
            @player = player(@player)
            if(ponline(@player)){
                if(has_permission(@player,'is.criminal')){
                    msg(color(RED).'Sorry, that player is a criminal right now, you please try again later.')
                    die()
                }

                if(!has_permission(@player,'is.incity') && !has_permission(@player,'in.survival')){
                    msg(color(RED).'You cannot hack that player, they are busy in a minigame or some other protected area')
                    die()
                }
                if(has_permission(@player,'is.op')){
                    msg(color(RED).'You cannot hack that player, they are way better than you,')
                    die()
                }
                // @bal = acc_balance(@plr)
                // if(@bal < 1000 && !has_permission(@plr,'is.op')){
                //     msg(color(RED).'Sorry, you need $1000 to use this command')
                //     die()
                // }
                // acc_subtract(@plr,1000)
                include('/home/minecraft/server/plugins/CommandHelper/includes/coolDown.ms')
                _coolDown('sombrahack',120,@plr)
                runas(~console,"/gamemode survival ".@player)
                runas(~console,"/minecraft:clear ".@player)
                runas(~console,"/effect ".@player." clear")
                runas(~console,"/fly ".@player." off")
                @theBind = bind(player_command,null,array('player':@player),@e, @vic = @player){
                    cancel()
                    tmsg(@vic,color(RED).'You have been hacked, you can\'t use any commands right now!')
                }

                set_timeout(30000,closure(
                    unbind(@theBind)
                    msg(color(RED).'Your powers are restored.')
                ))

                
                include('/home/minecraft/server/plugins/CommandHelper/includes/getHeroClass.ms')
                @class = _getheroclass(@player)
                try{
                    include('/home/minecraft/server/plugins/CommandHelper/LocalPackages/commands/buffs/'.@class.'.ms')
                    @h1 = @hero
                }catch(Exception @e){
                    @h1 = array()
                    @h1['name'] = @plrd
                }
                @class = _getheroclass(@plr)
                include('/home/minecraft/server/plugins/CommandHelper/LocalPackages/commands/buffs/'.@class.'.ms')
                @h2 = @hero
                set_timeout(3000,closure(
                    broadcast(color(LIGHT_PURPLE).color(BOLD).'POOF'.color(YELLOW).color(BOLD).'! '.@h2['name'].color(RED).color(BOLD).' has stripped '.color(WHITE).@h1['name'].color(RED).color(BOLD).' of their powers!');
                ))
            }
            
        }
    )
)

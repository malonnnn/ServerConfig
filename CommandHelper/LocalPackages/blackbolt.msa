yell:/yell = >>>
    
    # player xyz pitch and yaw
    @loc = ploc();
    @start = @loc
    
    @yaw = @loc['yaw'] + 90;
    @pitch = neg(@loc['pitch']);
    @vector = associative_array();
    @vector['x'] = cos(to_radians(@yaw)) * 2 * cos(to_radians(@pitch));
    @vector['y'] = sin(to_radians(@pitch));
    @vector['z'] = sin(to_radians(@yaw)) * 2 * cos(to_radians(@pitch));
    
    @length = 0

    set_interval(50, closure(){
        try {
            @length++
            @x = @vector['x'] * length
            @y = @vector['y'] * length + 1.5
            @z = @vector['z'] * length
            
            @start['x'] = @start['x'] + @x
            @start['y'] = @start['y'] + @y
            @start['z'] = @start['z'] + @z
            
            explosion(@start,5,true)
            
            @start['x'] = @start['x'] - @x
            @start['y'] = @start['y'] - @y
            @start['z'] = @start['z'] - @z
            
            if(@length > 6) {
                clear_task();
            }
            
        } catch(Exception @ex) {
            clear_task();
        }});
<<<